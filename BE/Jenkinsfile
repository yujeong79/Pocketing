pipeline {
    agent any

    options {
        skipDefaultCheckout(false)
    }

    stages {
        stage('Copy Config') {
            steps {
                sh '''
                mkdir -p BE/src/main/resources/
                cp /backend/secret/application.yml BE/src/main/resources/
                cp /backend/secret/application-prod.yml BE/src/main/resources/
                cp /backend/secret/firebase-service-account.json BE/src/main/resources/
                '''
            }
        }

        stage('Build') {
            steps {
                dir('BE') {
                    sh '''
                    chmod +x gradlew
                    ./gradlew clean build -x test
                    ls build/libs
                    '''
                }
            }
        }

        stage('Docker Build & Deploy') {
            steps {
                dir('BE') {
                    sh '''
                    docker stop backend-app || true
                    docker rm backend-app || true
                    docker build -t backend-app .
                    docker run -d --name backend-app \
                    --network docker_app_network \
                    -p 8081:8080 \
                    -v /home/ubuntu/project/backend/secret:/app/config \
                    -e SPRING_PROFILES_ACTIVES=prod \
                    -e SPRING_CONFIG_LOCATION=/app/config/application-prod.yml \
                    backend-app
                    '''
                }
            }
        }
    }
}
